{
    "type": "CityJSONExtension",
    "name": "Historical CityJSON",
    "description": "Extension to procedurally model 4D cities in the past",
    "uri": "https://someurl.org/hist.ext.json",
    "version": "0.2",
    "versionCityJSON": "1.1",
    "definitions": {
        "sources" : {                                    
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name":{"type": "string"},
                    "type": {"type": "string"},
                    "notes": {"type": "string"}
                }
            }
        },
        "paradata": {
            "type": "object",
            "properties": {
                "author": {"type": "string"},
                "date": {"type": "string", "format": "date"},
                "comments": {"type": "string"},
                "uncertainty": {"type": "string"},
                "version": {"type": "string"}
            }
        },
        "timeMoment": {
            "type": "object",
            "properties": {
                "year": {"type": "integer"},
                "sources":{"$ref": "#/definitions/sources"},
                "paradata":{"$ref": "#/definitions/paradata"}
            }
        }
    },

    "extraRootProperties": {
        "+floorHeightRange": {
            "type": "object",
            "properties": {
                "min": {"type": "number", "minimum": 1, "maximum": 10, "default":2.6},
                "max": {"type": "number", "minimum": 1, "maximum": 10, "default":4.0}
            }
        },

        "+roofTypeValues": {
            "type": "object",
            "properties": {
                "types": {"type": "array", 
                        "items": {"type": "string", "enum": ["hip", "gable", "domed", "flat"]}, 
                        "default":["hip", "gable", "domed", "flat"]}

            }
        },

        "+slopeRange": {
            "type": "object",
            "properties": {
                "min": {"type": "number", "minimum": 0.05, "maximum": 0.9, "default":0.2},
                "max": {"type": "number", "minimum": 0.05, "maximum": 0.9, "default":0.5}
            }
        },

        "+baseFloorThicknessRange": {
            "type": "object",
            "properties": {
                "min": {"type": "number", "minimum": 0, "maximum": 1, "default":0.2},
                "max": {"type": "number", "minimum": 0.05, "maximum": 1, "default":0.3}
            }
        },

        "+upperFloorThicknessRange": {
            "type": "object",
            "properties": {
                "min": {"type": "number", "minimum": 0, "maximum": 1, "default":0.2},
                "max": {"type": "number", "minimum": 0.05, "maximum": 1, "default":0.3}
            }
        },

        "+eavesOverhangRange": {
            "type": "object",
            "properties": {
                "min": {"type": "number", "minimum": 0, "maximum": 1, "default":0.1},
                "max": {"type": "number", "minimum": 0.05, "maximum": 1, "default":0.3}
            }
        },

        "+railingHeightRange": {
            "type": "object",
            "properties": {
                "min": {"type": "number", "minimum": 0, "maximum": 5, "default":0.8},
                "max": {"type": "number", "minimum": 0.05, "maximum": 5, "default":1.3}
            }
        },

        "+railingWidthRange": {
            "type": "object",
            "properties": {
                "min": {"type": "number", "minimum": 0, "maximum": 1, "default":0.1},
                "max": {"type": "number", "minimum": 0.05, "maximum": 1, "default":0.3}
            }
        }
    },  

    "extraAttributes": {
        "Building": {
            "+updatedGeometry": { "type": "boolean" },
            
            "+terrainDifference": {"type": "number"},

            "+modellingTypes": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties":{
                        "modellingType": {"type": "string", "enum": ["manual", "procedural"]},
                        "LOD": {"type":"integer"},
                        "sources":{"$ref": "#/definitions/sources"},
                        "paradata":{"$ref": "#/definitions/paradata"}
                    }
                }
            },

            "+height": {
                "type": "object",
                "properties":{
                    "value":{"type": "number"},
                    "sources":{"$ref": "#/definitions/sources"},
                    "paradata":{"$ref": "#/definitions/paradata"}
                }
            },

            "+numberOfFloors": {
                "type": "object",
                "properties":{
                    "value":{"type": "integer"},
                    "sources":{"$ref": "#/definitions/sources"},
                    "paradata":{"$ref": "#/definitions/paradata"}
                }
            },

            "+floorHeight": {
                "type": "object",
                "properties":{
                    "value":{"type": "number"},
                    "sources":{"$ref": "#/definitions/sources"},
                    "paradata":{"$ref": "#/definitions/paradata"}
                }
            },

            "+roof": {
                "type": "object",
                "properties":{

                    "type": {
                        "type": "object",
                        "properties": {
                            "value": {"type": "string", "enum": ["hip", "gable", "domed", "flat"]},
                            "sources":{"$ref": "#/definitions/sources"},
                            "paradata":{"$ref": "#/definitions/paradata"}
                        }
                    },

                    "parameters":{
                        "type": "object",
                        "properties": {
                            "slope":{"type": "object",
                                    "properties": {
                                        "value":{"type": "number"},
                                        "sources":{"$ref": "#/definitions/sources"},
                                        "paradata":{"$ref": "#/definitions/paradata"}
                                    }
                            },

                            "baseFloorThickness":{"type": "object",
                                    "properties": {
                                        "value":{"type": "number"},
                                        "sources":{"$ref": "#/definitions/sources"},
                                        "paradata":{"$ref": "#/definitions/paradata"}
                                    }
                            },

                            "upperFloorThickness":{"type": "object",
                                    "properties": {
                                        "value":{"type": "number"},
                                        "sources":{"$ref": "#/definitions/sources"},
                                        "paradata":{"$ref": "#/definitions/paradata"}
                                    }
                            },

                            "eavesOverhang": {"type": "object",
                                    "properties": {
                                        "value":{"type": "number"},
                                        "sources":{"$ref": "#/definitions/sources"},
                                        "paradata":{"$ref": "#/definitions/paradata"}
                                    }
                            },

                            "gableSides" : { 
                                    "type":"array",    
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "value":{"type": "number"},
                                            "sources":{"$ref": "#/definitions/sources"},
                                            "paradata":{"$ref": "#/definitions/paradata"}
                                        }
                                    }
                        
                            },

                            "railingHeight": {"type": "object",
                                    "properties": {
                                        "value":{"type": "number"},
                                        "sources":{"$ref": "#/definitions/sources"},
                                        "paradata":{"$ref": "#/definitions/paradata"}
                                    }
                            },

                            "railingWidth" : {"type": "object",
                                    "properties": {
                                        "value":{"type": "number"},
                                        "sources":{"$ref": "#/definitions/sources"},
                                        "paradata":{"$ref": "#/definitions/paradata"}
                                    }
                            },

                            "domePercentBaseRadius":{"type": "object",
                                    "properties": {
                                        "value":{"type": "number"},
                                        "sources":{"$ref": "#/definitions/sources"},
                                        "paradata":{"$ref": "#/definitions/paradata"}
                                    }
                            },

                            "domePercentVertRadius" :{"type": "object",
                                    "properties": {
                                        "value":{"type": "number"},
                                        "sources":{"$ref": "#/definitions/sources"},
                                        "paradata":{"$ref": "#/definitions/paradata"}
                                    }
                            }

                        }
                    }

                }
            },
        
            "+linkedEntities": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "linkedID": "string",
                        "sources":{"$ref": "#/definitions/sources"},
                        "paradata":{"$ref": "#/definitions/paradata"}
                    }
                }
            },

            "+parcels": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "parcelID": "string",
                        "parcelOwners": {
                            "type": "array",
                            "properties": {
                                "name": "string",
                                "start": {
                                    "timeMoment":{"$ref": "#/definitions/timeMoment"}
                                },
                                "end": {
                                    "timeMoment":{"$ref": "#/definitions/timeMoment"}
                                }
                            }
                        },
                        "sources":{"$ref": "#/definitions/sources"},
                        "paradata":{"$ref": "#/definitions/paradata"}
                    }
                }
            },

            "+time": {
                "type": "object",
                "properties":{

                    "estimatedStart":{
                        "timeMoment":{"$ref": "#/definitions/timeMoment"}
                    },

                    "appearances":{
                        "type": "array",
                        "items": {"timeMoment":{"$ref": "#/definitions/timeMoment"}}
                    },

                    "estimatedEnd":{
                        "timeMoment":{"$ref": "#/definitions/timeMoment"}
                    }
                }
            }
        }
    },

    "extraCityObjects": {}
}